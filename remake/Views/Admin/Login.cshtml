@model remake.Models.UserWeb

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/share/_LayoutPage2.cshtml";
}

@using (Html.BeginForm("Login", "Admin", FormMethod.Post))
{
    <div id="login" style="margin-left : 250px;padding-top:30px;">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <h4 style="margin-right:300px;margin-bottom:30px;">Đăng nhập</h4>
                    </div>
                    <div class="form-group">
                        <label for="Tk">Tài Khoản : </label>
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @type = "text", @name = "UserName", @class = "input", @required = "", @id = "tk" } })
                    </div>
                    <div class="form-group">
                        <label for="mk">Mật khẩu : </label>
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @type = "password", @name = "PassWord", @class = "input", @required = "", @id = "mk" } })
                    </div>
                    <div class="form-group form-check">
                        <label class="remember">
                            <input type="checkbox">
                            <span class="checkmark"></span>Giữ tôi đăng nhập
                        </label>
                    </div>
                    <button type="submit" class="btn btn-dark" style="margin-left:70px;">Đăng nhập</button>
                    <p class="signup" style="padding-top:10px;"> Quên mật khẩu ?<a href="~/Account/ForgotPassword" class="signuplink">nhấn vào đây</a></p>
                </div>
            </div>
        </div>
        <h1>@ViewBag.Error</h1>
    </div>

}

